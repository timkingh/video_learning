{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ff_tools",
            "args": [
                "--input=/mnt/winshare/yuv/test0_2560x1440.yuv",
                "--output=/mnt/winshare/yuv/test0_2560x1440_out.yuv", /* yuv420p only */
                "--nn_results=/home/timkingh/code/b_open_source/video_learning/ff_tools/output/nn_out_5_three_people_meeting_room_1080p_2.txt",
                "--width=2560", "--height=1440", "--frames=1",
                "--disp_flg=0", /* 0 - madi, 1 - madp, 2 - dspy, 3 - nn results */
                "--input_fmt=0", /* 0 - YUV420, 1 - YUV420sp */
                "--out_scale=2", /* output scaling factor for output yuv */
                "--aligned_size=16", /* aligned size for input yuv, 16 for H.264 */
            ],
            "preLaunchTask": "build",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}