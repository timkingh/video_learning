    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ff_tools",
            "args": [
                "--input=/home/timkingh/yuv/31705_1080p_10000kbps_h265_300frames.yuv",
                "--width=1920", "--height=1080", "--frames=300",
                "--disp_flg=3", "--input_fmt=0", "--out_scale=1"
            ],
            "preLaunchTask": "build",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}